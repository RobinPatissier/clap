{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription</title>
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="text-center mb-3">
                    <img src="{{ asset('images/logo.png') }}" alt="Logo" style="max-width: 80%; height: auto;">
                </div>
                <h1 class="card-title">Inscription</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                    <div class="form-group">
                        {{ form_row(registrationForm.pseudo, {
                            label: 'Pseudo',
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.email, {
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Mot de passe',
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.agreeTerms, {
                            attr: {'class': 'form-check-input'}
                        }) }}
                    </div>

                    <button type="submit" class="btn btn-primary bruno">S'inscrire</button>
                {{ form_end(registrationForm) }}

                <div class="text-center mt-3">
                    <p>Vous avez un compte ? 
                        <br>
                        <a href="{{ path('app_login') }}">Connexion</a></p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
