{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ user.pseudo }}</h1>
    {% if user.profilePicture %}
        <img src="{{ asset('uploads/profile_pictures/' ~ user.profilePicture) }}" alt="Photo de profil" />
    {% else %}
        <p>Aucune photo de profil disponible.</p>
    {% endif %}
    <a href="{{ path('user_profile_edit') }}">Modifier le profil</a>
{% endblock %}
